<Window x:Class="CarelessWhisperV2.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Careless Whisper V3.7.0 - Settings"
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0">
            
            <!-- General Settings Tab -->
            <TabItem Header="General">
                <StackPanel Margin="15">
                    <TextBlock Text="General Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="AutoStartCheckBox" 
                              Content="Start with Windows" 
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Theme:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="ThemeComboBox" Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark" IsSelected="True"/>
                        <ComboBoxItem Content="System"/>
                    </ComboBox>
                    
                    <TextBlock Text="Logging:" FontWeight="SemiBold" Margin="0,20,0,5"/>
                    <CheckBox x:Name="EnableLoggingCheckBox" 
                              Content="Enable transcription logging" 
                              IsChecked="True"
                              Margin="0,0,0,5"/>
                    
                    <CheckBox x:Name="SaveAudioFilesCheckBox" 
                              Content="Save audio files with transcriptions" 
                              Margin="0,0,0,5"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Retention period:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="RetentionDaysTextBox" 
                                 Text="30" 
                                 Width="50" 
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="days" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            
            <!-- Hotkeys Tab -->
            <TabItem Header="Hotkeys">
                <StackPanel Margin="15">
                    <TextBlock Text="Hotkey Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Push-to-Talk Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="HotkeyTextBox" 
                                 Grid.Column="0"
                                 Text="F1" 
                                 IsReadOnly="True"
                                 PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                 Margin="0,0,10,0"/>
                        
                        <Button x:Name="ClearHotkeyButton" 
                                Grid.Column="1"
                                Content="Clear" 
                                Click="ClearHotkey_Click"
                                Width="60"/>
                    </Grid>
                    
                    <TextBlock Text="LLM Prompt Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="LlmHotkeyTextBox" 
                                 Grid.Column="0"
                                 Text="Shift+F2" 
                                 IsReadOnly="True"
                                 PreviewKeyDown="LlmHotkeyTextBox_PreviewKeyDown"
                                 Margin="0,0,10,0"/>
                        
                        <Button x:Name="ClearLlmHotkeyButton" 
                                Grid.Column="1"
                                Content="Clear" 
                                Click="ClearLlmHotkey_Click"
                                Width="60"/>
                    </Grid>
                    
                    <TextBlock Text="Instructions: Click in the text box and press the key combination you want to use." 
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                    
                    <CheckBox x:Name="RequireModifiersCheckBox" 
                              Content="Require modifier keys (Ctrl, Alt, Shift)" 
                              Margin="0,15,0,0"/>
                    
                    <TextBlock Text="Supported Keys:" FontWeight="SemiBold" Margin="0,20,0,5"/>
                    <TextBlock Text="• Function keys: F1-F12" Margin="10,0,0,2"/>
                    <TextBlock Text="• Letters: A-Z" Margin="10,0,0,2"/>
                    <TextBlock Text="• Numbers: 0-9" Margin="10,0,0,2"/>
                    <TextBlock Text="• Special keys: Space, Tab, Insert, Delete, etc." Margin="10,0,0,2"/>
                    <TextBlock Text="• Modifier combinations: Ctrl+, Alt+, Shift+" Margin="10,0,0,2"/>
                </StackPanel>
            </TabItem>
            
            <!-- Audio Tab -->
            <TabItem Header="Audio">
                <StackPanel Margin="15">
                    <TextBlock Text="Audio Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Microphone:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="MicrophoneComboBox" 
                              SelectionChanged="MicrophoneComboBox_SelectionChanged"
                              Margin="0,0,0,10"/>
                    
                    <Button x:Name="RefreshDevicesButton" 
                            Content="Refresh Devices" 
                            Click="RefreshDevices_Click"
                            Width="120" 
                            HorizontalAlignment="Left"
                            Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Audio Quality:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Sample Rate:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="SampleRateComboBox" Width="100">
                            <ComboBoxItem Content="8000 Hz"/>
                            <ComboBoxItem Content="16000 Hz" IsSelected="True"/>
                            <ComboBoxItem Content="22050 Hz"/>
                            <ComboBoxItem Content="44100 Hz"/>
                            <ComboBoxItem Content="48000 Hz"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Buffer Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="BufferSizeComboBox" Width="100">
                            <ComboBoxItem Content="512"/>
                            <ComboBoxItem Content="1024" IsSelected="True"/>
                            <ComboBoxItem Content="2048"/>
                            <ComboBoxItem Content="4096"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <Button x:Name="TestMicrophoneButton" 
                            Content="Test Microphone" 
                            Click="TestMicrophone_Click"
                            Width="120" 
                            HorizontalAlignment="Left"/>
                    
                    <TextBlock x:Name="TestResultTextBlock" 
                               Text="" 
                               Margin="0,10,0,0" 
                               Foreground="Green"/>
                </StackPanel>
            </TabItem>
            
            <!-- Whisper Tab -->
            <TabItem Header="Whisper">
                <StackPanel Margin="15">
                    <TextBlock Text="Speech Recognition" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Model Size:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ModelSizeComboBox" Margin="0,0,0,10">
                        <ComboBoxItem Content="Tiny" Tag="Tiny"/>
                        <ComboBoxItem Content="Base (Recommended)" Tag="Base" IsSelected="True"/>
                        <ComboBoxItem Content="Small" Tag="Small"/>
                        <ComboBoxItem Content="Medium" Tag="Medium"/>
                    </ComboBox>
                    
                    <TextBlock Text="Model Information:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="ModelInfoTextBlock" Text="Base Model - Balanced performance and accuracy" FontWeight="Medium"/>
                            <TextBlock x:Name="ModelSizeTextBlock" Text="Size: ~74M parameters, ~1GB RAM" Margin="0,5,0,0"/>
                            <TextBlock x:Name="ModelPerformanceTextBlock" Text="Performance: Good accuracy with reasonable speed" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="Language:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LanguageComboBox" Margin="0,0,0,15">
                        <ComboBoxItem Content="Auto-detect" Tag="auto" IsSelected="True"/>
                        <ComboBoxItem Content="English" Tag="en"/>
                        <ComboBoxItem Content="Spanish" Tag="es"/>
                        <ComboBoxItem Content="French" Tag="fr"/>
                        <ComboBoxItem Content="German" Tag="de"/>
                        <ComboBoxItem Content="Italian" Tag="it"/>
                        <ComboBoxItem Content="Portuguese" Tag="pt"/>
                        <ComboBoxItem Content="Dutch" Tag="nl"/>
                    </ComboBox>
                    
                    <CheckBox x:Name="EnableGpuCheckBox" 
                              Content="Enable GPU acceleration (if available)" 
                              IsChecked="True"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Note: GPU acceleration may significantly improve transcription speed but requires compatible hardware." 
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>

            <!-- OpenRouter Tab - NEW V3.0 -->
            <TabItem Header="OpenRouter">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="OpenRouter LLM Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <PasswordBox x:Name="ApiKeyPasswordBox" 
                                         Grid.Column="0"
                                         Margin="0,0,10,0"/>
                            
                            <Button x:Name="TestApiKeyButton" 
                                    Grid.Column="1"
                                    Content="Test" 
                                    Click="TestApiKey_Click"
                                    Width="60"
                                    Margin="0,0,10,0"/>
                                    
                        <Button x:Name="RefreshModelsButton" 
                                Grid.Column="2"
                                Content="Refresh Models" 
                                Click="RefreshModels_Click"
                                Width="100"/>
                        </Grid>
                        
                        <TextBlock x:Name="ApiKeyStatusTextBlock" 
                                   Text="" 
                                   Margin="0,0,0,10" 
                                   Foreground="Gray"/>
                        
                        <Button x:Name="DiagnoseConnectionButton" 
                                Content="Diagnose Connection" 
                                Click="DiagnoseConnection_Click"
                                Width="150" 
                                HorizontalAlignment="Left"
                                Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Model:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <ComboBox x:Name="ModelComboBox" 
                                  SelectionChanged="ModelComboBox_SelectionChanged"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Model Information:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="ModelNameTextBlock" Text="No model selected" FontWeight="Medium"/>
                                <TextBlock x:Name="ModelDescriptionTextBlock" Text="" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <TextBlock x:Name="ModelPricingTextBlock" Text="" Margin="0,2,0,0"/>
                                <TextBlock x:Name="ModelContextTextBlock" Text="" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="System Prompt:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SystemPromptTextBox" 
                                 Text="You are a helpful assistant. Please provide a clear, concise response to the user's voice input."
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Advanced Settings:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Temperature:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Slider x:Name="TemperatureSlider" 
                                    Grid.Column="1"
                                    Minimum="0" 
                                    Maximum="2" 
                                    Value="0.7" 
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Max Tokens:" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,10,0"/>
                            <TextBox x:Name="MaxTokensTextBox" 
                                     Grid.Column="3"
                                     Text="1000" 
                                     VerticalAlignment="Center"/>
                        </Grid>
                        
                        <CheckBox x:Name="EnableStreamingCheckBox" 
                                  Content="Enable streaming responses" 
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Note: You can get an API key from openrouter.ai. The Speech-Prompt feature (Shift+F2) will transcribe your speech and send it to the selected model for processing." 
                                   FontStyle="Italic" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Ollama Tab - NEW V3.0 -->
            <TabItem Header="Ollama">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Ollama Local LLM Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Server URL:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="OllamaServerUrlTextBox" 
                                     Grid.Column="0"
                                     Text="http://localhost:11434"
                                     Margin="0,0,10,0"/>
                            
                            <Button x:Name="TestOllamaConnectionButton" 
                                    Grid.Column="1"
                                    Content="Test" 
                                    Click="TestOllamaConnection_Click"
                                    Width="60"
                                    Margin="0,0,10,0"/>
                                    
                            <Button x:Name="RefreshOllamaModelsButton" 
                                    Grid.Column="2"
                                    Content="Refresh Models" 
                                    Click="RefreshOllamaModels_Click"
                                    Width="100"/>
                        </Grid>
                        
                        <TextBlock x:Name="OllamaConnectionStatusTextBlock" 
                                   Text="" 
                                   Margin="0,0,0,10" 
                                   Foreground="Gray"/>
                        
                        <TextBlock Text="Model:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <ComboBox x:Name="OllamaModelComboBox" 
                                  SelectionChanged="OllamaModelComboBox_SelectionChanged"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Model Information:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="OllamaModelNameTextBlock" Text="No model selected" FontWeight="Medium"/>
                                <TextBlock x:Name="OllamaModelSizeTextBlock" Text="" Margin="0,5,0,0"/>
                                <TextBlock x:Name="OllamaModelFamilyTextBlock" Text="" Margin="0,2,0,0"/>
                                <TextBlock x:Name="OllamaModelModifiedTextBlock" Text="" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="System Prompt:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="OllamaSystemPromptTextBox" 
                                 Text="You are a helpful assistant. Please provide a clear, concise response to the user's voice input."
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Advanced Settings:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Temperature:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Slider x:Name="OllamaTemperatureSlider" 
                                    Grid.Column="1"
                                    Minimum="0" 
                                    Maximum="2" 
                                    Value="0.7" 
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Max Tokens:" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,10,0"/>
                            <TextBox x:Name="OllamaMaxTokensTextBox" 
                                     Grid.Column="3"
                                     Text="1000" 
                                     VerticalAlignment="Center"/>
                        </Grid>
                        
                        <CheckBox x:Name="OllamaEnableStreamingCheckBox" 
                                  Content="Enable streaming responses" 
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Note: Ensure Ollama is running locally. You can install models using 'ollama pull model-name' command. The Speech-Prompt feature (Shift+F2) will transcribe your speech and send it to the selected local model for processing." 
                                   FontStyle="Italic" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Audio Notifications Tab - NEW V3.0 -->
            <TabItem Header="Audio Notifications">
                <StackPanel Margin="15">
                    <TextBlock Text="Audio Notification Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="EnableNotificationsCheckBox" 
                              Content="Enable audio notifications" 
                              Margin="0,0,0,10"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <CheckBox x:Name="PlayOnSpeechToTextCheckBox" 
                                  Grid.Row="0"
                                  Content="Play notification for Speech-to-Text (F1)" 
                                  Margin="20,0,0,5"/>
                        
                        <CheckBox x:Name="PlayOnLlmResponseCheckBox" 
                                  Grid.Row="1"
                                  Content="Play notification for LLM responses (Shift+F2)" 
                                  Margin="20,0,0,10"/>
                    </Grid>
                    
                    <TextBlock Text="Audio File:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="AudioFilePathTextBox" 
                                 Grid.Column="0"
                                 Margin="0,0,10,0"
                                 IsReadOnly="True"/>
                        
                        <Button x:Name="BrowseAudioFileButton" 
                                Grid.Column="1"
                                Content="Browse..." 
                                Click="BrowseAudioFile_Click"
                                Width="80"
                                Margin="0,0,10,0"/>
                        
                        <Button x:Name="TestAudioButton" 
                                Grid.Column="2"
                                Content="Test" 
                                Click="TestAudio_Click"
                                Width="60"/>
                    </Grid>
                    
                    <TextBlock Text="Volume:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider x:Name="VolumeSlider" 
                                Grid.Column="0"
                                Minimum="0" 
                                Maximum="1" 
                                Value="0.5" 
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="VolumeSlider_ValueChanged"
                                Margin="0,0,10,0"/>
                        
                        <TextBlock x:Name="VolumeValueTextBlock" 
                                   Grid.Column="1"
                                   Text="50%"
                                   Width="40"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="Supported formats: .wav, .mp3" 
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- TTS Tab - NEW V3.6.5 -->
            <TabItem Header="TTS">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Text-to-Speech Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox x:Name="EnableTtsCheckBox" 
                                  Content="Enable Text-to-Speech (Ctrl+F1)" 
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Voice Selection:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TtsVoiceComboBox" 
                                  SelectionChanged="TtsVoiceComboBox_SelectionChanged"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Voice Information:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="TtsVoiceNameTextBlock" Text="No voice selected" FontWeight="Medium"/>
                                <TextBlock x:Name="TtsVoiceDescriptionTextBlock" Text="" Margin="0,5,0,0"/>
                                <TextBlock x:Name="TtsVoiceDetailsTextBlock" Text="" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Speech Speed:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider x:Name="TtsSpeechSpeedSlider" 
                                    Grid.Column="0"
                                    Minimum="0.5" 
                                    Maximum="2.0" 
                                    Value="1.0" 
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="TtsSpeechSpeedSlider_ValueChanged"
                                    Margin="0,0,10,0"/>
                            
                            <TextBlock x:Name="TtsSpeechSpeedValueTextBlock" 
                                       Grid.Column="1"
                                       Text="1.0x"
                                       Width="40"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="TTS Volume:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider x:Name="TtsVolumeSlider" 
                                    Grid.Column="0"
                                    Minimum="0" 
                                    Maximum="1" 
                                    Value="1.0" 
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="TtsVolumeSlider_ValueChanged"
                                    Margin="0,0,10,0"/>
                            
                            <TextBlock x:Name="TtsVolumeValueTextBlock" 
                                       Grid.Column="1"
                                       Text="100%"
                                       Width="40"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Max Text Length:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBox x:Name="TtsMaxTextLengthTextBox" 
                                     Text="5000" 
                                     Width="80" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="characters" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="Python Environment:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock x:Name="TtsPythonStatusTextBlock" Text="Checking Python environment..." FontWeight="Medium"/>
                                <TextBlock x:Name="TtsKittenStatusTextBlock" Text="" Margin="0,5,0,0"/>
                                <TextBlock x:Name="TtsEngineStatusTextBlock" Text="" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button x:Name="RefreshTtsStatusButton" 
                                    Grid.Column="0"
                                    Content="Refresh Status" 
                                    Click="RefreshTtsStatus_Click"
                                    Width="120"
                                    Margin="0,0,10,0"/>
                            
                            <Button x:Name="TestTtsButton" 
                                    Grid.Column="1"
                                    Content="Test TTS" 
                                    Click="TestTts_Click"
                                    Width="80"
                                    Margin="0,0,10,0"/>
                            
                            <CheckBox x:Name="TtsUseFallbackSapiCheckBox" 
                                      Grid.Column="2"
                                      Content="Enable SAPI fallback" 
                                      IsChecked="True"
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Usage Instructions:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBlock Text="1. Copy any text to your clipboard from any application" Margin="10,0,0,2"/>
                        <TextBlock Text="2. Press Ctrl+F1 to have KittenTTS read the text aloud" Margin="10,0,0,2"/>
                        <TextBlock Text="3. Text longer than max length will be automatically truncated" Margin="10,0,0,2"/>
                        <TextBlock Text="4. Uses Windows SAPI fallback if KittenTTS is unavailable" Margin="10,0,0,10"/>
                        
                        <TextBlock Text="Note: First use may take 10-15 seconds for model loading. Subsequent uses are near-instantaneous." 
                                   FontStyle="Italic" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Vision Tab - NEW V3.6.3 -->
            <TabItem Header="Vision">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Vision Analysis Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox x:Name="EnableVisionCheckBox" 
                                  Content="Enable Vision Analysis" 
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Vision Model:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox x:Name="VisionModelComboBox" 
                                      Grid.Column="0"
                                      SelectionChanged="VisionModelComboBox_SelectionChanged"
                                      Margin="0,0,10,0"/>
                            
                            <Button x:Name="RefreshVisionModelsButton" 
                                    Grid.Column="1"
                                    Content="Refresh Models" 
                                    Click="RefreshVisionModels_Click"
                                    Width="100"/>
                        </Grid>
                        
                        <TextBlock Text="Model Information:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="VisionModelNameTextBlock" Text="No model selected" FontWeight="Medium"/>
                                <TextBlock x:Name="VisionModelDescriptionTextBlock" Text="" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <TextBlock x:Name="VisionModelDetailsTextBlock" Text="" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Vision System Prompt:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="VisionSystemPromptTextBox" 
                                 Text="Analyze this image and describe what you see in detail. Focus on important visual elements, text, objects, and any notable features."
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Image Processing:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Max Image Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="VisionImageSizeComboBox" Width="150">
                                <ComboBoxItem Content="1024x1024 (Recommended)" Tag="1024" IsSelected="True"/>
                                <ComboBoxItem Content="1536x1536 (High Detail)" Tag="1536"/>
                                <ComboBoxItem Content="2048x2048 (Maximum)" Tag="2048"/>
                                <ComboBoxItem Content="512x512 (Fast)" Tag="512"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Image Quality:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="VisionImageQualityComboBox" Width="150">
                                <ComboBoxItem Content="High Quality" Tag="high" IsSelected="True"/>
                                <ComboBoxItem Content="Balanced" Tag="balanced"/>
                                <ComboBoxItem Content="Fast Processing" Tag="fast"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button x:Name="TestVisionCaptureButton" 
                                    Grid.Column="0"
                                    Content="Test Capture" 
                                    Click="TestVisionCapture_Click"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            
                            <CheckBox x:Name="VisionShowPreviewCheckBox" 
                                      Grid.Column="1"
                                      Content="Show capture preview" 
                                      IsChecked="True"
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            
                            <CheckBox x:Name="VisionAutoClipboardCheckBox" 
                                      Grid.Column="2"
                                      Content="Auto-copy results" 
                                      IsChecked="True"
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Usage Instructions:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBlock Text="• Shift+F3: Quick screen capture and vision analysis" Margin="10,0,0,2"/>
                        <TextBlock Text="• Ctrl+F3: Hold to record speech, then capture screen with your voice prompt" Margin="10,0,0,2"/>
                        <TextBlock Text="• Results are automatically copied to clipboard" Margin="10,0,0,2"/>
                        <TextBlock Text="• Works with any vision-capable AI model (Claude 3, GPT-4 Vision, etc.)" Margin="10,0,0,10"/>
                        
                        <TextBlock Text="Note: Ensure a vision-capable model is selected in OpenRouter or Ollama settings." 
                                   FontStyle="Italic" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Text-to-Speech Tab - NEW -->
            <TabItem Header="Text-to-Speech">
                <StackPanel Margin="15">
                    <TextBlock Text="Text-to-Speech Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="EnableTTSCheckBox" 
                              Content="Enable Text-to-Speech (Ctrl+F1)" 
                              IsChecked="True"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Voice:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox x:Name="VoiceComboBox" 
                                  Grid.Column="0"
                                  SelectionChanged="VoiceComboBox_SelectionChanged"
                                  Margin="0,0,10,0"/>
                        
                        <Button x:Name="RefreshVoicesButton" 
                                Grid.Column="1"
                                Content="Refresh" 
                                Click="RefreshVoices_Click"
                                Width="80"/>
                    </Grid>
                    
                    <TextBlock Text="Speech Rate:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Slow" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="SpeechRateSlider" 
                                Grid.Column="1"
                                Minimum="-10" 
                                Maximum="10" 
                                Value="0" 
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="SpeechRateSlider_ValueChanged"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Fast" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                    
                    <TextBlock Text="Speech Volume:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider x:Name="SpeechVolumeSlider" 
                                Grid.Column="0"
                                Minimum="0" 
                                Maximum="100" 
                                Value="100" 
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                ValueChanged="SpeechVolumeSlider_ValueChanged"
                                Margin="0,0,10,0"/>
                        
                        <TextBlock x:Name="SpeechVolumeValueTextBlock" 
                                   Grid.Column="1"
                                   Text="100%"
                                   Width="40"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <Button x:Name="TestVoiceButton" 
                            Content="Test Voice" 
                            Click="TestVoice_Click"
                            Width="100" 
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Text="How it works:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <Border BorderBrush="LightBlue" BorderThickness="1" Padding="10" Margin="0,0,0,15" Background="#F0F8FF">
                        <StackPanel>
                            <TextBlock Text="Ctrl+F1: Read Clipboard Aloud" FontWeight="Medium" Margin="0,0,0,5"/>
                            <TextBlock Text="• Copies text from clipboard and speaks it using the selected voice" Margin="10,0,0,2"/>
                            <TextBlock Text="• Works instantly - no need to hold the key down" Margin="10,0,0,5"/>
                            
                            <TextBlock Text="Escape: Stop Speech" FontWeight="Medium" Margin="0,5,0,5"/>
                            <TextBlock Text="• Press Escape key anytime to stop current speech" Margin="10,0,0,2"/>
                            <TextBlock Text="• Useful for stopping long text readings" Margin="10,0,0,2"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="Note: This feature uses Windows Speech API (SAPI). Copy any text to clipboard, then press Ctrl+F1 to have it read aloud. Use Escape to stop playback at any time." 
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
            
        </TabControl>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Click="Save_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0" 
                    IsDefault="True"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Click="Cancel_Click" 
                    Width="80" 
                    Height="30" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
